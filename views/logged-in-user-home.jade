      #notify-container.row
        .col-xs-12.col-lg-12
          .alert.alert-info.alert-dismissible(role='alert')
            button.close(type='button', data-dismiss='alert', aria-label='Close')
              span(aria-hidden='true') Ã—
            |  Welcome 
            strong #{DisplayName}!
            |  Update your profile.
      #app-container.row(ng-controller='UserProfileController as user')
        .col-xs-12.col-lg-6.col-lg-offset-3.app-background
          ul.nav.nav-tabs.pts
            li.active(role='presentation')
              a(href='#') Profile
            li(role='presentation')
              a(href='#') Address
            li(role='presentation')
              a(href='#') Messages
          .row.mts
            .col-xs-12.col-lg-10.col-lg-offset-1
              label(for='user-name') User Name
              input#user-name.form-control(type='text', placeholder='e.g. cool_john')
          .row.mts
            .col-xs-12.col-lg-10.col-lg-offset-1
              label(for='display-name') Display Name
              input#display-name.form-control(type='text', disabled='disabled', ng-model= "user.model.DisplayName")
          .row.mts
            .col-xs-12.col-lg-10.col-lg-offset-1
              label(for='email-id') Email Id
              input#email-id.form-control(type='text', disabled='disabled', ng-model= "user.model.Email")
          .row.mts
            .col-xs-12.col-lg-10.col-lg-offset-1
              label(for='user-role') User Role
              select#user-role.form-control
                option Select Role
                option Admin
                option Teacher
                option Student
                option Parent
          .row.mtl.pbs
            .col-xs-12.col-lg-10.col-lg-offset-1
              input#btn-save-profile.form-control.btn.btn-primary(type='button', value="Update Profile")
      script(type='text/javascript', src='/javascripts/libraries/jquery.min.js')
